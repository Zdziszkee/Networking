// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "formatter": "language_server",
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "base_keymap": "JetBrains",
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/opt/homebrew/opt/llvm/bin/clangd", // Unchanged: your Homebrew-installed clangd
        "arguments": [
          "--background-index", // Unchanged: speeds up indexing
          "--compile-commands-dir=build", // Unchanged: points to compile_commands.json
          "--clang-tidy", // Unchanged: enables clang-tidy linting
          "--completion-style=detailed", // Unchanged: detailed completion signatures
          "--header-insertion=iwyu", // Unchanged: suggests headers
          "--limit-results=50", // Unchanged: limits completions
          "--pch-storage=memory", // Unchanged: faster PCH in memory
          "--log=verbose", // Unchanged: verbose logs
          "-Weverything", // Added: enables ALL Clang warnings
          "-Wno-system-headers", // Added: suppresses warnings from system headers
          "-Wno-c++98-compat", // Added: reduces noise for C99-only code
          "-Wno-padded" // Added: avoids pedantic struct padding warnings
        ]
      },
      "initialization_options": {
        "clangdFileStatus": true // Unchanged: file status updates
      },
      "settings": {
        "completion": {
          "enableSnippets": true // Unchanged: snippet support
        }
      }
    }
  },
  "languages": {
    "C": {
      "format_on_save": "on", // Unchanged: formats on save
      "tab_size": 2, // Unchanged: 2-space indentation
      "formatter": {
        "external": {
          "command": "clang-format" // Unchanged: uses clang-format
        }
      }
    }
  },
  "files": {
    "auto_close": true // Unchanged: auto-close files
  }
}
